gem 'rack-fiber_pool', '~> 0.9.1', :require => nil

# Support libraries
gem 'yajl-ruby', '~> 0.8.3'
gem 'nokogiri', '~> 1.4.4'
gem 'bcrypt-ruby', '~> 2.1.4'
