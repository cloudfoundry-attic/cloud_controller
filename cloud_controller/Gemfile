source 'http://rubygems.org'

# Rails itself
gem 'rails', '~> 3.0.20'
# Message bus
gem 'nats', :require => 'nats/client'

# VCAP common components
gem 'vcap_common', :require => ['vcap/common', 'vcap/component'], :git => 'https://github.com/cloudfoundry/vcap-common.git', :ref => 'fd6b6d91'
